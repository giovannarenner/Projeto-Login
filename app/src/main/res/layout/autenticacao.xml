<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bege">

    <TextView
        android:id="@+id/tituloAutenticacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bege"
        android:gravity="center"
        android:text="AUTENTICAÇÃO"
        android:textColor="@color/marrom"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/edLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloAutenticacao"
        android:layout_marginTop="197dp"
        android:hint="Insira o login:"
        android:padding="20dp"
        android:textSize="30dp"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/edSenha3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edLogin"
        android:layout_marginTop="48dp"
        android:hint="Insira a senha:"
        android:padding="20dp"
        android:textSize="30dp"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/btEntrar"
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:layout_below="@+id/edSenha3"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="71dp"
        android:backgroundTint="@color/marrom"
        android:text="ENTRAR"
        android:textSize="25dp" />
</RelativeLayout>